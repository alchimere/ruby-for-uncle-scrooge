<%= form_with(model: operation, local: true) do |form| %>
  <% if operation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(operation.errors.count, "error") %> prohibited this operation from being saved:</h2>

      <ul>
      <% operation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :account_id %>
    <%= form.select :account_id,
        Account.all.map { |_m| [_m.name, _m.id] }, id: :operation_account_id %>
  </div>

  <div class="field">
    <%= form.label :operation_category_id %>
    <%= form.select :operation_category_id,
        OperationCategory.all.map { |_m| [_m.name, _m.id] }, id: :operation_operation_category_id %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :operation_name %>
  </div>

  <div class="field">
    <%= form.label :original_name %>
    <%= form.text_field :original_name, id: :operation_original_name %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.text_field :amount, id: :operation_amount %>
  </div>

  <div class="field">
    <%= form.label :operation_date %>
    <%= form.date_select :operation_date, id: :operation_operation_date %>
  </div>

  <div class="field">
    <%= form.label :value_date %>
    <%= form.date_select :value_date, id: :operation_value_date %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment, id: :operation_comment %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
