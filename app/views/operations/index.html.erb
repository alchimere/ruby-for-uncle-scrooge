<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>

      <div class="card">
        <div class="header">
          <h4 class="title">Operations</h4>
          <p class="category">Here is a subtitle for this table</p>
        </div>

        <div class="content table-responsive table-full-width">
          <table class="table table-hover table-striped table-condensed">
            <thead>
              <tr>
                <th>Account</th>
                <th>Category</th>
                <th>Name</th>
                <th>Amount</th>
                <th>Date</th>
                <th colspan="2"></th>
              </tr>
            </thead>

            <tbody>
              <% @operations.each do |operation| %>
              <tr>
                <td><%= operation.account.name %></td>
                <td><%= operation.operation_category.name %></td>
                <td class="<%= operation.amount > 0 ? 'success' : 'danger' %>">
                  <%= operation.name %>
                  <% if operation.comment.present? %>
                    <br/><small class="text-muted"><%= operation.comment %></small>
                  <% end %>
                </td>
                <td class="<%= operation.amount > 0 ? 'success' : 'danger' %> text-nowrap"><%= operation.amount.round(2) %> â‚¬</td>
                <td class="text-nowrap"><%= operation.operation_date %></td>
                <td><%= link_to 'Show', operation %></td>
                <td><%= link_to 'Edit', edit_operation_path(operation) %></td>
              </tr>
              <% end %>
            </tbody>
          </table>

          <br/>

          <%= link_to 'New Operation', new_operation_path %>
        </div>
      </div>
    </div>
  </div>
</div>
